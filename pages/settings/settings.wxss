.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
}
.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: #fff;  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 100rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  
  
.userinfo-text {  
  color: #000;
  font-size: 14px;  
  border-radius:40%;  
}  

.list-item {
  display: flex;
  flex-direction: row;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #E5E5E5;
}

.list-name {
  margin-left: 32rpx;
  line-height: 88rpx;
  font-family: PingFang SC;
  font-size: 34rpx;
  color: #000;
  
}

.list-icon {
  margin-top: 30rpx;
  margin-left: 538rpx;
  width: 16rpx;
  height: 26rpx;
}

.list-container {
  margin-top: 98rpx;
  width: 100%;
}

.book-choose{
  width: 50%;
  margin-left: 25%;
}

.word_learn_info{
  width: 50%;
  margin-left: 25%;
}

.dialog-container{  
    width: 100%;  
    height: 100%;   
    background-color:rgba(15, 15, 26, 0.7);  
    position: fixed;  
    z-index: 999;   
} 



.wordbook-bottom{  
    display: flex;  
    flex-grow: 0;  
    flex-direction: column;
    background-color: #fff;
}  
  
.container-bottom-item{  
    padding:100rpx;  
    display: flex;  
    justify-content: center;  
    border-bottom: 1rpx solid #000; 
 
}  