.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  justify-content: space-between;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
  margin-top: 124rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 30rpx; 
  color: #585858;
  font-family: Songti SC;
  font-size: 32rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #E5E5E5;
}

.list-name {
  margin-left: 32rpx;
  line-height: 88rpx;
  font-family: PingFang SC;
  font-size: 34rpx;
  color: #000;
  
}

.list-icon {
  margin-top: 30rpx;
  margin-left: 538rpx;
  width: 16rpx;
  height: 26rpx;
}

.list-container {
  margin-top: 98rpx;
  width: 100%;
}

.book-choose{
  width: 50%;
  margin-left: 25%;
}

.word_learn_info{
  width: 50%;
  margin-left: 25%;
}

.dialog-container{  
    width: 100%;  
    height: 100%;   
    background-color:rgba(15, 15, 26, 0.7);  
    position: fixed;  
    z-index: 999;   
} 



.wordbook-bottom{  
    display: flex;  
    flex-grow: 0;  
    flex-direction: column;
    background-color: #fff;
}  
  
.container-bottom-item{  
    padding:100rpx;  
    display: flex;  
    justify-content: center;  
    border-bottom: 1rpx solid #000; 
 
}  